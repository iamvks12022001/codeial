

<link rel="stylesheet" href="<%= assetPath('css/home.css') %>">

<link rel="stylesheet" href="<%= assetPath('css/chat_box.css') %>">

<div id="home-container">
 <section id="feed-posts">
     <h3>Posts</h3>
     <!-- if condition is added for authentication purpose -->
     <!-- one can't see the form if he is not logged in -->
     <% if(locals.user){ %>
     <form action="/posts/create" id="new-post-form" method="POST">
       <textarea name="content" cols="30" rows="3" placeholder="What's on your mind..??" required></textarea>
       <input type="submit" value="Post">


    </form>
    <% } %>
 <div id="posts-list-container">
     <ul>
 <% for( post of posts ){ %>
    <!-- using parials  here -->
    <%- include('_post'); %>
<% }  %>
     </ul>
 </div>
 </section>
 <section id="user-friends">
   <h4 id="main-heading">Friends</h4>
   <% for(u of all_users){ %>
    <a href="/users/profile/<%= u._id%>">
         <!--displaying all the users  -->
        
        <img src="<%= u.avatar %>" alt="<%= u.name %>" width="30" height="30">
        <div id="friend-name">
            <%= u.name %>
        </div>
   
    </a>


   <% } %>
 </section>
 <%- include('_chat_box'); %>
 </div>
 <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/svg-with-js.css"></script>
 <script src="https://use.fontawesome.com/releases/v5.10.2/js/all.js" data-auto-replace-svg="nest"></script>
 <script src="<%= assetPath('js/home_comments.js') %>"></script>



<script src="<%= assetPath('js/home_posts.js') %>"></script>

<script src="<%= assetPath('js/toggle_likes.js') %>"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.js"></script>

<script src="<%= assetPath('js/chat_engine.js') %>"></script>
<% if(locals.user) { %>
<script>
    new chatEngine('user-chat-box','<%= locals.user.email %>')
</script>
<% } %>