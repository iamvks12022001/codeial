<header id="layout-header">
  <nav className="nav">
    <div class="left-div">
      <!-- src="https://cdn-icons.flaticon.com/png/512/2685/premium/2685468.png?token=exp=1646910176~hmac=8c6b09a5ba9b358a91c7ebc4e8c55987"-->
      <a href="/">
        <img
          style="height: 40px; position: absolute; top: 10px; left: 7px"
          src="http://localhost:8000/uploads/images/logo.png"
          alt="logo"
        />
        <span
          style="position: relative; margin-left: 20px; left: 15px; color: aqua"
          >Connect With World...
        </span>
      </a>
    </div>
    <div class="search-container">
      <img
        class="search-icon"
        src="http://localhost:8000/uploads/images/search.png"
        alt="search-icon"
      />

      <input
        id="search"
        onkeyup="search()"
        type="text"
        name="search"
        placeholder="Search .."
      />
    </div>

    <div class="auth-links">
      <ul>
        <li>
          <!--passing user id to profile page-->
          <a href="/"> Home </a>
        </li>

        <% if (locals.user){ %>
        <li>
          <!--passing user id to profile page-->
          <a href="/users/profile/<%= user.id%>"><%= user.name %></a>
        </li>
        <li>
          <a href="/users/sign-out">Sign out</a>
        </li>
        <% }else{ %>
        <li>
          <a href="/users/sign-in">Sign In</a>
        </li>
        <li>
          <a href="/users/sign-up">Sign Up</a>
          <!--fixing phela sign in likha tha-->
        </li>

        <% } %>
      </ul>
    </div>
  </nav>
</header>
